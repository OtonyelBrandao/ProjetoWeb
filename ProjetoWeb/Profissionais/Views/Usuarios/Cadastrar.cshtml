@model Profissionais.Models.ModelsDb.Usuarios

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section CSSinDev{ 
    <link rel="stylesheet" href="~/css/UsuariosCadastrar.css"/>
}
<center><h2 class="TituloUsuariosh2">Cadastrar</h2></center>

<hr />

<form asp-action="Cadastrar" class="container">
    <div class="row FonteUsuariosRow" >
        <div class="offset-md-2 col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Digite seu nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" placeholder="Digite seu sobrenome" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" placeholder="Digite um Email" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input type="password" asp-for="Senha" class="form-control Senha" placeholder="Digite Uma senha" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ConfirmarSenha" class="control-label">Confrimar Senha</label>
                <input type="password" id="ConfirmarSenha" class="form-control Senha" placeholder="Confirme a Senha" />
            </div>
        </div>

    </div>
    <div class="form-group" id="button">
        <input type="submit" value="Cadastrar" class="btn btn-success" id="Enviar" />
    </div>
    <div id="alert" class="container">
    </div>
</form>
