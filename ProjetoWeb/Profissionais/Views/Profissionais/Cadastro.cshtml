@using Profissionais.Models.ModelsDb;
@model Profissionais.Models.ModelsDb.ProfissionaisT

@{
    List<Especialidades> EspecialidadesList = ViewBag.Especialidades;
}

@{
    ViewData["Title"] = "Cadastro";
}

<h2>Cadastro</h2>

<h4>Profissionais - Cadastro </h4>
<hr />
<div class=" container">
    <!--Formulario para cadastro de Profissionais-->
    <form asp-action="Cadastro" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <!--Informações Basicas-->
            <div class="col-md-4 form-group">
                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Primeiro Nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sobrenome" class="control-label"></label>
                    <input asp-for="Sobrenome" class="form-control" placeholder="Sobrenome" />
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control" placeholder="Digite Seu Telefone" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WhatsApp" class="control-label"></label>
                    <input asp-for="WhatsApp" class="form-control" placeholder="Digite Seu WhatsApp" />
                    <span asp-validation-for="WhatsApp" class="text-danger"></span>
                </div>

                <!--Informações Basicas-->
                <!--Informações Do Endereço-->
            </div>
            <div class="col-md-4 form-group">
                <div class="form-group">
                    <label asp-for="Nascimento" class="control-label"></label>
                    <input asp-for="Nascimento" class="form-control" type="date" />
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CEP" class="control-label"></label>
                    <input asp-for="CEP" class="form-control CEP" onblur="GetLogradouro()" placeholder="CEP" />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label asp-for="Rua" class="control-label" id="logradouro"></label>
                    <input asp-for="Rua" class="form-control logradouro" placeholder="Rua" />
                    <span asp-validation-for="Rua" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Complemento" class="control-label"></label>
                    <input asp-for="Complemento" class="form-control" placeholder="Complemento" />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Bairro" class="control-label" id="bairro"></label>
                    <input asp-for="Bairro" class="form-control bairro" placeholder="Bairro" />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 form-group">
                <div class="form-group">
                    <label asp-for="Cidade" class="control-label" id="localidade"></label>
                    <input readonly="readonly" asp-for="Cidade" class="form-control localidade" placeholder="Cidade" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UF" class="control-label" id="uf"></label>
                    <input readonly="readonly" asp-for="UF" class="form-control uf" placeholder="UF" />
                    <span asp-validation-for="UF" class="text-danger"></span>
                </div>
                <!--Informações Do Endereço-->
                <!--Campo para informa suas especialidades-->
                <div class="form-group">
                    <label>Especialidades</label>
                    <div class="row">
                        @foreach (var item in EspecialidadesList)
                        {
                            <div class="col-md-4 col-sm-4">
                                <input type="checkbox" name="Especialidades" value="@item.Id" />
                                <label for="Especialidades">@item.NomeDaEspecialidade </label>
                            </div>
                        }
                    </div>
                </div>
                <!--Campo para informa suas especialidades-->
                <!--Campo para inserir imagem-->
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="FotoPerfil" class="btn btn-default btn-group btn-light">Img</label>
                            <input type="file" name="arquivos" style="display:none;" id="FotoPerfil" />
                        </div>
                        <div class="col-md-10">
                            <div style="width:250px;height:200px;padding:0;">
                                <img class="img-thumbnail" id="img_preview" src="/images/perfil_foto_padrão.jpg" style="width: 250px; height: 200px; margin:0; border:2px solid black" alt=""/>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Campo para inserir imagem-->
            </div>
        </div>
        <!--Botão para enviar Formilario-->
        <div class="form-group">
            <input type="submit" value="Cadastrar" class="btn btn-default" />
        </div>
        <!--Botão para enviar Formilario-->
    </form>
    <!--Formulario para cadastro de Profissionais-->
    <!--Botão Voltar-->
    <div>
        <a asp-action="Inicio" class="btn btn-group btn-primary">Voltar</a>
    </div>
    <!--Botão Voltar-->
</div>
@section Scripts{
    <script>
        function GetLogradouro() {
            var cep = $('.CEP').val()
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetLogradouro","Profissionais")',
                    data: { CEP:  cep },
                    success: function (result) {

                            $(".logradouro").val(result.logradouro),
                            $(".bairro").val(result.bairro),
                            $(".localidade").val(result.localidade),
                            $(".uf").val(result.uf)
                    }
                });
        }
        function ImagePreview(input)
        {

            if (input.files && input.files[0])
	        {

                var r = new FileReader();

                r.onload = function(e)
		        {
			        $("#img_preview").show();
                    $("#img_preview").attr("src", e.target.result);
                }

                r.readAsDataURL(input.files[0]);

            }
        }

        $().ready(function() {

	        hide_empty_image = false;
	        set_blank_to_empty_image = false;
	        set_image_border = true;

	        if (hide_empty_image)
		        $("#img_preview").hide();

	        if (set_blank_to_empty_image)
		        $("#img_preview").attr("src","data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=");
	        
            $("#img_preview").css("width", "250px");
            $("#img_preview").css("height", "200px");
            $("#img_preview").css("border", "2px solid black");
            $("#img_preview").css("padding", "0");
            
            

            $("#FotoPerfil").change(function(){
		        ImagePreview(this);
	        });

        });
    </script>
}