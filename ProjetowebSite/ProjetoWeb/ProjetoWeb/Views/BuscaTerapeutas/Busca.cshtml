@model IList<ProjetoWeb.Models.Terapeutas>
@{
    ViewData["Title"] = "Busca";
}

<div class="row" style=" height:570px; width:1360px; margin:0;">
    <form asp-controller="BuscaTerapeutas" asp-action="" class="col-md-6" style="border:0px 0px 0px 0.5px solid black;height:100%;width:50%;margin-top:25px;" method="get">

        <div class="input-group">
            <span class="input-group-addon">Profissão</span>
            <input id="Profissao" type="text" class="form-control" name="Profissao" placeholder="Digite a Profissão">
        </div>
        <br />
        <div class="input-group">
            <span class="input-group-addon">Endereço</span>
            <input id="Endereco" type="text" class="form-control" name="Endereco" placeholder="Digite o Endereço">
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
    <main class="col-md-6" style="border-left:1px solid gray;height:100%;padding:1px 0px 0px 2px;overflow: auto;width:50%;">
        <table class="table table-striped table-responsive table-hover">
            @foreach (var Item in Model)
            {
                string Nascimento = string.Format("{0:dd/MM/yyyy}", Item.Nascimento);
                <tr class="media">

                    <td class="media-left">
                        @*<img src="img_avatar1.png" class="media-object" style="width:60px">*@
                        <svg class="bd-placeholder-img media-object"
                             width="200"
                             height="200"
                             xmlns="http://www.w3.org/2000/svg"
                             role="img"
                             aria-label="Placeholder: Thumbnail"
                             preserveAspectRatio="xMidYMid slice"
                             focusable="false">
                            <title>Placeholder</title>
                            <rect width="100%" height="100%" fill="#55595c" />
                            <text x="50%" y="50%" fill="#eceeef" dy=".3em">
                            </text>
                        </svg>
                    </td>
                    <td class="media-body">
                        <h4 class="media-heading" style="text-align:center;">Titulo</h4>
                        <hr />
                        <label>Nome : </label> @Item.Nome<br />
                        <label>E-mail :</label> @Item.Email<br />
                        <label>Endereço :</label> @Item.Endereco<br />
                        <label>Nascimento :</label> @Nascimento<br />
                        <label>Telefone :</label> @Item.Telefone<br />
                    </td>

                </tr>
            }
        </table>
    </main>
</div>
